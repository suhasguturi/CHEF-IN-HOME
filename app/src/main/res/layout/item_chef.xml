<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="16dp"
    android:background="@drawable/chef_item_background"
    android:gravity="center_vertical">

    <!-- Chef Image -->
    <ImageView
        android:id="@+id/imageViewChef"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:scaleType="centerCrop"
        android:src="@drawable/ic_profile"
        android:contentDescription="@string/chef_image_description" />

    <!-- Chef Details Container -->
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical"
        android:paddingStart="16dp">

        <!-- Chef Name -->
        <TextView
            android:id="@+id/textViewChefName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Chef Name"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="@color/black" />

        <!-- Chef Specialty -->
        <TextView
            android:id="@+id/textViewChefSpecialty"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Specialty"
            android:textSize="14sp"
            android:textColor="@android:color/darker_gray" />

        <!-- Chef Availability -->
        <TextView
            android:id="@+id/textViewChefAvailability"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Available"
            android:textSize="14sp"
            android:textColor="@color/colorPrimary"
            android:paddingTop="4dp" />

    </LinearLayout>

</LinearLayout>
